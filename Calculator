m=int(input("Enter the 1st number="))
n=int(input("Enter the 2nd number="))
print("Operations:\n1.Add\n2.Subtract\n3.Multiply\n4.Divide\n")
op=int(input("Enter any operation="))
if op==1:
    print(m+n)
elif op==2:
    if m>n:
        print(m-n)
    else:
        print(n-m)
elif op==3:
    print(m*n)
elif op==4:
    print(m/n)
else:
    print("Invalid input")
